.range__tick:last-child {
  -webkit-transform: translateX(-3px);
  -moz-transform: translateX(-3px);
  -ms-transform: translateX(-3px);
  -o-transform: translateX(-3px);
  transform: translateX(-3px);
}

.rangePointsSvg {
  margin-left: -6px
  -webkit-transform: translateY(-8px);
  -moz-transform: translateY(-8px);
  -ms-transform: translateY(-8px);
  -o-transform: translateY(-8px);
  transform: translateY(-8px);
}

.jd__tick {
  fill: #a0a0a0;
  -webkit-transform: translateX(2px);
  -moz-transform: translateX(2px);
  -ms-transform: translateX(2px);
  -o-transform: translateX(2px);
  transform: translateX(2px);
}

.jd__point
  fill: #a0a0a0;
  font-size: 10px
  white-space: pre
  &:hover
    fill: red

#jdRangePoint {
  -webkit-transform: translateY(-8px);
  -moz-transform: translateY(-8px);
  -ms-transform: translateY(-8px);
  -o-transform: translateY(-8px);
  transform: translateY(-8px);
}

.orthographicFullscreen
  cursor pointer
  position: absolute
  width: 1.5%
  svg
    fill: white
    height 100%
    width 100%
  .exitFullscreen
      display none

#body:not(.showControls) .orthographicFullscreen
    .enterFullscreen
      display none
    .exitFullscreen
      display none
.orthographicFullscreen.inFullscreen
    .enterFullscreen
      display none
    .exitFullscreen
      display block

#hitsounds-button
    margin-bottom: 1em;
    margin-left: 0.3em;
    font-size: 12px;
    width: 9.6em !important;
    height: 1.6em;
    overflow: hidden;

#resetHitsounds
    display: none
